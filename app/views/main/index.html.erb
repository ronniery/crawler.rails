<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body class="login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="card-wrapper">
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">
                                Login
                                <small>Used on auth</small>
                            </h4>
                            <hr>
                            <form class="login-form" novalidate>
                                <div class="form-group email-region">
                                    <label for="email">E-mail</label>
                                    <input id="email" type="email" class="form-control" name="email" value="" required="" autofocus="">
                                </div>

                                <div class="form-group password-region">
                                    <label for="password">Password
                                        <a 
                                            href="#" 
                                            class="float-right"
                                            data-toggle="tooltip" data-html="true" title="Ok, now <b>we</b> have a problem!">
											Forgot password?
										</a>
                                    </label>
                                    <div style="position:relative" id="eye-password">
                                        <input id="password" type="password" class="form-control show" name="password" required="" data-eye="">
                                        <div class="btn btn-primary btn-sm btn-outline-primary" id="passeye-toggle">Show</div>
                                    </div>
                                    <div class="invalid-feedback">
                                        Password is required
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="custom-checkbox custom-control">
                                        <input type="checkbox" name="remember" id="remember" class="custom-control-input">
                                        <label 
                                            for="remember" 
                                            class="custom-control-label"
                                            data-toggle="tooltip" data-html="true" title="Don't trust that i will remember you 😏">
                                            Remeber me
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group mb-2 mt-2">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        Get token
                                    </button>
                                </div>
                                <hr>
                                <div class="mt-2 text-center">
                                    Don't have an account? <a href="#" data-toggle="tooltip" data-html="true" title="<em>Sorry</em> you can't create <b>an account</b> 😕">Create One</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>
